<h1><%= @task.title %></h1>
<h3><%= link_to "Edit task", edit_path %></h3>
<h3><%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></h3>
<p><%= @task.details %></p>
<p><%= @task.completed ? "This task is completed" : "This task is not completed yet" %></p>
<%= link_to 'Go back', tasks_path %>
